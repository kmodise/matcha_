<!DOCTYPE html>
<html  lang="en">


<body">

    <% if (typeof error !== 'undefined' && error && error !== 'none') {  %>
            <%-error%>
        <% } %>
    <% if (typeof success !== 'undefined' && success && success !== 'none') {  %> 
            <%-success%>
    <% } %>
    
    <form action="login" method="POST">
        <input type="username"  name=username placeholder="Username" required autofocus>
        <input type="password"  name="password" placeholder="Password" required>
       
        <button type="submit">Sign in</button>
        <p><a href="/forget_password" >Forgot Password</a></p>

        <p><a href="/register" >Create Account</a></p>

    </form>
    <% include ../extras/footer.ejs %>
</body>
</html>